<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConversationActiviy$PlaceholderFragment">

    <LinearLayout
        android:id="@+id/recipient_chips_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recipientsEditorPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/recipientsEditor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter recipient" />

            <requestFocus />

            <ImageButton
                android:id="@+id/btnPickContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:capitalize="characters"
                android:src="@android:drawable/sym_contact_card"
                android:text="Contacts" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNum0"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_min"
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:id="@+id/btnNum1"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_min"
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/btnNum2"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_min"
                android:layout_weight="1"
                android:text="2" />

            <Button
                android:id="@+id/btnNum3"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_min"
                android:layout_weight="1"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNum4"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_min"
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:id="@+id/btnNum5"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_min"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:id="@+id/btnNum6"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_min"
                android:layout_weight="1"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNum7"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_min"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/btnNum8"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_min"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/btnNum9"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_min"
                android:layout_weight="1"
                android:text="9" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <ListView
            android:id="@+id/messageListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stackFromBottom="true"
            android:transcriptMode="normal" />

        <LinearLayout
            android:id="@+id/containerDpad"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDpadLeft"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_min"
                android:layout_weight="1.0"
                android:text="&lt;" />

            <Button
                android:id="@+id/btnDpadRight"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_min"
                android:layout_weight="1.0"
                android:text="&gt;" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnAttach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:capitalize="characters"
            android:src="@android:drawable/ic_menu_add" />

        <EditText
            android:id="@+id/messageEditor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter message" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:capitalize="characters"
            android:src="@android:drawable/ic_menu_send" />
    </LinearLayout>
</LinearLayout>
